  <div class="container my-5 py-5">
    <div class="row d-flex justify-content-center">
      <div class="col-md-12 col-lg-10 col-xl-8">
        <div class="card">
          <div class="card-body">
            <div class="d-flex flex-start align-items-center">
              <div id="avatar">
                <% if user.avatar? %>
                  <%= image_tag user.avatar_url, id: "avatar"%> 
                <% else %>
                  <%= image_tag "avatar.png", id: "avatar" %>
                <% end %>
              </div>
              <div>
                <h6 class="fw-bold text-primary mb-1"><%= link_to user.username, profile_path(user), class: "nav-link" %></h6>
                <p class="text-muted small mb-0">
                  Shared publicly <%= post.created_at.strftime('%A, %B %e') %>
                </p>
              </div>
            </div>
            <p align="center" > <strong> <%= post.title %> </strong></p>
            <p class="mt-3 mb-4 pb-2">
              <%= post.body %>
            </p>

            <div class="small d-flex justify-content-start">
              <% if post.is_liked?(current_user) %>
                <%= link_to (render 'likes/unlike'), post_like_path(post, post.like()), data: { turbo_method: :delete, turbo: true }, class: "bi bi-hand-thumbs-up"  %> 
              <% else %>
                <%= link_to (render 'likes/like'), post_likes_path(post), data: { turbo_method: :post, turbo: true }, class: "bi bi-hand-thumbs-up"   %> 
              <% end %>
              <span>&nbsp</span>
              <%= post.likes.size %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>



