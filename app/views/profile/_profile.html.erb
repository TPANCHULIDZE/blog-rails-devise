<section class="vh-100" style="background-color: #f4f5f7;">
  <div class="container py-5 h-100">
    <h2 align="center"> Profile </h2>
    <div class="row d-flex justify-content-center align-items-top h-100">
      <div class="col col-lg-6 mb-4 mb-lg-0">
        <div class="card mb-3" style="border-radius: .5rem;">
          <div class="row g-0">
            <div class="col-md-4 gradient-custom text-center text-white"
              style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
              <% if user.avatar? %>
               <%= image_tag user.avatar_url, class: "img-fluid my-5" %> 
              <% else %>
                <%= image_tag "avatar.png", class: "img-fluid my-5"  %>
              <% end %>
              <h5><%= user.username %></h5>
              <p><%= user.status %></p>
              <i class="far fa-edit mb-5"></i>
            </div>
            <div class="col-md-8">
              <div class="card-body p-4">
                <h6>Information</h6>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="col-6 mb-3">
                    <h6>Email</h6>
                    <p class="text-muted"><%= user.email %></p>
                  </div>
                  <div class="col-6 mb-3">
                    <h6>Phone</h6>
                    <p class="text-muted">#########</p>
                  </div>
                </div>
                <h6>Posts</h6>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="col-6 mb-3">
                    <h6>Recent</h6>
                    <% post = user.posts.last %>
                    <p class="text-muted">
                      <% if post %>
                        <%= link_to post.title, post%>
                      <% end %>
                       </p>
                  </div>
                  <div class="col-6 mb-3">
                    <h6>
                       
                    </h6>
                    <p class="text-muted">
                      <%= link_to translate("posts"), user_post_path(user), class: "nav-link" %>
                    </p>
                  </div>
                </div>
                <div class="d-flex justify-content-start">
                  <%= render 'profile/for_admin' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

