<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="d-flex align-items-center mb-3 pb-1">
    <%= f.text_field :username, class: "form-control form-control-lg", autofocus: true, autocomplete: "username", placeholder: 'username' %>
  </div>

  <div class="d-flex align-items-center mb-3 pb-1">
    <%= f.email_field :email, class: "form-control form-control-lg", autofocus: true, autocomplete: "email", placeholder: "email" %>
  </div>

  <div class="d-flex align-items-center mb-3 pb-1">
    <%= f.password_field :password, class: "form-control form-control-lg", autocomplete: "new-password", placeholder: 'password' %>
  </div>

  <div class="d-flex align-items-center mb-3 pb-1">
    <%= f.password_field :password_confirmation, class: "form-control form-control-lg", autocomplete: "new-password", placeholder: 'password confirmation' %>
  </div>

  <div class="d-flex align-items-center mb-3 pb-1">
    <%= f.file_field :avatar, class: "form-control form-control-lg"%>
  </div>

  <div class="pt-1 mb-4">
    <%= f.submit "Sign up", class: "btn btn-dark" %>
  </div>
<% end %>

